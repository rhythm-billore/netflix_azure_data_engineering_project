{
	"name": "Netflixproject_silver_layer",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_cast",
						"type": "DatasetReference"
					},
					"name": "NetflixCast"
				},
				{
					"dataset": {
						"referenceName": "ds_category",
						"type": "DatasetReference"
					},
					"name": "NetflixCategory"
				},
				{
					"dataset": {
						"referenceName": "ds_countries",
						"type": "DatasetReference"
					},
					"name": "NetflixCountries"
				},
				{
					"dataset": {
						"referenceName": "ds_directors",
						"type": "DatasetReference"
					},
					"name": "NetflixDirectors"
				},
				{
					"dataset": {
						"referenceName": "ds_titles",
						"type": "DatasetReference"
					},
					"name": "NetflixTitles"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "derivedCountryName",
					"description": "Updating country name "
				},
				{
					"name": "derivedReleaseYear",
					"description": "typecast release_year float to int"
				},
				{
					"name": "derivedMins",
					"description": "datatype change mins"
				}
			],
			"scriptLines": [
				"source(output(",
				"          cast as string,",
				"          show_id as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> NetflixCast",
				"source(output(",
				"          listed_in as string,",
				"          show_id as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> NetflixCategory",
				"source(output(",
				"          country as string,",
				"          show_id as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> NetflixCountries",
				"source(output(",
				"          director as string,",
				"          show_id as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> NetflixDirectors",
				"source(output(",
				"          duration_minutes as short,",
				"          duration_seasons as integer,",
				"          type as string,",
				"          title as string,",
				"          date_added as string,",
				"          release_year as integer,",
				"          rating as string,",
				"          description as string,",
				"          show_id as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> NetflixTitles",
				"NetflixCountries derive(country = upper(trim(country))) ~> derivedCountryName",
				"NetflixTitles derive(release_year = toInteger(release_year)) ~> derivedReleaseYear",
				"derivedReleaseYear derive(duration_minutes = toInteger(duration_minutes)) ~> derivedMins"
			]
		}
	}
}